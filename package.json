{
  "name": "indian-grocery-mart",
  "version": "1.0.0",
  "description": "Indian Grocery E-commerce Application",
  "main": "server.js",
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "scripts": {
    "start": "node server.js",
    "client": "cd client && npm start",
    "install-client": "cd client && npm install",
    "build-client": "cd client && npm run build",
    "build": "npm install && npm run install-client && npm run build-client",
    "vercel-build": "npm run build",
    "dev": "concurrently \"npm run start\" \"npm run client\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "moment-timezone": "^0.5.47",
    "mongodb": "^6.13.1",
    "mongoose": "^7.8.6",
    "xtend": "^4.0.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.1"
  }
}
